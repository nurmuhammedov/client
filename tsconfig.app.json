{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": "./src",
    "paths": {
      "@topcoder/app/*": ["app/*"],
      "@topcoder/components/*": ["shared/components/*"],
      "@topcoder/constants/*": ["shared/constants/*"],
      "@topcoder/helpers/*": ["shared/helpers/*"],
      "@topcoder/contexts/*": ["app/contexts/*"],
      "@topcoder/assets/*": ["shared/assets/*"],
      "@topcoder/config/*": ["shared/config/*"],
      "@topcoder/types/*": ["shared/types/*"],
      "@topcoder/utils/*": ["shared/utils/*"],
      "@topcoder/hooks/*": ["shared/hooks/*"],
      "@topcoder/styles/*": ["app/styles/*"],
      "@topcoder/modules/*": ["modules/*"],
      "@topcoder/store/*": ["app/store/*"],
      "@topcoder/api/*": ["shared/api/*"],
      "@topcoder/i18n/*": ["app/i18n/*"],
      "@topcoder/pages/*": ["pages/*"],
      "@topcoder/*": ["*"]
    }
  },
  "include": ["src"]
}
